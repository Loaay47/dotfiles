#/bin/sh
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias dot='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
## xbps
alias i='doas pacman -S'
alias u='doas pacman -Syu'
alias q='doas pacman -Ss'
alias r='doas pacman -R'

alias vi='nvim'
alias inv='nvim $(fzf -m --preview="bat --color=always {}")'
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias cclip="xclip -selection clipboard"

alias dop='cd "/media/fun/_loaay_data"'
alias phone='scrcpy --max-size=1024 --video-codec=h264 --video-encoder=OMX.qcom.video.encoder.avc --video-bit-rate=1M'

