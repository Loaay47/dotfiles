# Programs:

super + Return
        $TERMINAL

super + b
        $HOME/dotfiles/scripts/brave.sh

super + e
        mpv --player-operation-mode=pseudo-gui

super + q
        localsend

super + p
        bash $HOME/dotfiles/scripts/app_run.sh

super + r
        $HOME/dotfiles/scripts/search.sh

super + m
        $HOME/dotfiles/scripts/vid_fun.sh

super + l
        $HOME/dotfiles/scripts/pdf.sh

super + c
        $HOME/dotfiles/scripts/emoji_picker.sh

super + j
        rofi -show calc -modi calc -no-sort

super + u
        $TERMINAL -e $HOME/dotfiles/scripts/lfub.sh

super + shift + U
        pcmanfm

super + shift + P
        $HOME/dotfiles/scripts/pass.sh
        # xcolor | xclip -selection clipboard

# ==========================================================
# Controlling:

super + shift + L
        $HOME/dotfiles/scripts/suspend.sh

super + {bracketright, bracketleft,, BackSpace}
        $HOME/dotfiles/scripts/volume.sh {up, down, toggle}

super + Up
        $HOME/dotfiles/scripts/brightness.sh up

super + Down
        $HOME/dotfiles/scripts/brightness.sh down

super + shift + N
        $TERMINAL -e newsboat

super + shift + X
        $TERMINAL -e "neomutt"

super + shift + A
        $HOME/dotfiles/scripts/mount.sh

super + shift + BackSpace
        $HOME/dotfiles/scripts/exit.sh

super + shift + G
        $HOME/dotfiles/scripts/bt.sh

super + w
        $HOME/dotfiles/scripts/define_word.sh

super + shift + O
        $HOME/dotfiles/scripts/screenshot.sh -s

super + shift + Z
        maim -u -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

super + shift + colon
        $HOME/dotfiles/scripts/audio_switcher.sh

super + alt + space
        $HOME/dotfiles/scripts/keyboard_layout.sh

super + Escape
        pkill -USR1 -x sxhkd
 ============================================
# Tools:

super + shift + comma
        $HOME/dotfiles/scripts/kill_process.sh

super + f
        $TERMINAL -e sh -c "$HOME/dotfiles/scripts/ts"

super + shift + R
        $HOME/dotfiles/scripts/screencast.sh

super + v
        CM_LAUNCHER=dmenu clipmenu -i -l 6 -p "Clipboard:"

super + a
        boomer
 ============================================

# mouse movements :
# Move mouse left
ctrl + alt + h
    xdotool mousemove_relative -- -26 0

# Move mouse right
ctrl + alt + l
    xdotool mousemove_relative -- 26 0

# Move mouse up
ctrl + alt + k
    xdotool mousemove_relative -- 0 -26

# Move mouse down
ctrl + alt + j
    xdotool mousemove_relative -- 0 26

# Left click
ctrl + alt + space
    xdotool click 1

ctrl + alt + p
    xdotool click 3

# Scroll up
alt + u
    xdotool click 4

# Scroll down
alt + d
    xdotool click 5
