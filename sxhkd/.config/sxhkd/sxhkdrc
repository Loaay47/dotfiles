# Programs:

super + Return
        $TERMINAL

super + w
        $HOME/dotfiles/scripts/brave.sh

super + b
        $HOME/dotfiles/scripts/brave.sh

super + d
        mpv --player-operation-mode=pseudo-gui

super + x
        localsend

super + t
        $HOME/dotfiles/scripts/telegram.sh

super + o
        rofi -show drun

super + r
        $HOME/dotfiles/scripts/search.sh

super + p
        $HOME/dotfiles/scripts/pdf.sh

super + i
        rofi -show emoji -modi emoji

super + c
        rofi -show calc -modi calc -no-sort

super + e
        $TERMINAL -e $HOME/dotfiles/scripts/lfub.sh

super + shift + e
        pcmanfm

super + shift + v
        $TERMINAL -e bash -c "$HOME/dotfiles/scripts/nvim.sh"

super + shift + R
        xcolor | xclip -selection clipboard

# ==========================================================
# Controlling:

super + shift + l
        $HOME/dotfiles/scripts/suspend.sh

super + {equal, minus, BackSpace}
        $HOME/dotfiles/scripts/volume.sh {up, down, toggle}

super + backslash
        $HOME/dotfiles/scripts/brightness.sh up

super + bracketright
        $HOME/dotfiles/scripts/brightness.sh down

super + m
        $HOME/dotfiles/scripts/mount.sh

super + shift + BackSpace
        $HOME/dotfiles/scripts/exit.sh

super + shift + U
        $HOME/dotfiles/scripts/bt.sh

super + shift + N
        $HOME/dotfiles/scripts/define_word.sh

super + shift + S
        $HOME/dotfiles/scripts/screenshot.sh -s

super + shift + bracketright
        maim -u -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png

super + shift + H
        $HOME/dotfiles/scripts/opacity.sh

super + space
        $HOME/dotfiles/scripts/keyboard_layout.sh
 ============================================
# Tools:

super + shift + W
        $TERMINAL -e bash -c "$HOME/dotfiles/scripts/fzf.sh"

# super + y
#         $HOME/dotfiles/scripts/mpv_clip.sh

super + y
        $TERMINAL -e sh -c "$HOME/dotfiles/scripts/tmux-sessionizer"

super + shift + o
        $HOME/dotfiles/scripts/screencast.sh

super + v
        clipmenu

super + shift + a
        $HOME/dotfiles/scripts/arabic.sh

 ============================================

# mouse movements :
# Move mouse left
ctrl + alt + h
    xdotool mousemove_relative -- -26 0

# Move mouse right
ctrl + alt + l
    xdotool mousemove_relative -- 26 0

# Move mouse up
ctrl + alt + k
    xdotool mousemove_relative -- 0 -26

# Move mouse down
ctrl + alt + j
    xdotool mousemove_relative -- 0 26

# Left click
ctrl + alt + space
    xdotool click 1

ctrl + alt + p
    xdotool click 3

# Scroll up
alt + u
    xdotool click 4

# Scroll down
alt + d
    xdotool click 5
